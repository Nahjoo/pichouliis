{% extends 'index.html.twig' %}

{% block stylesheets %}
<script src="../js/stopwatch.js" defer ></script>
{% endblock %}
{% block body %}
<div class="container-fluid">
    {{ form_start(form) }}

    <div class="form-group" id="zone">
        {{ form_widget(form.zone) }}
    </div>

    <div class="form-group" id="subarea">
        {{ form_widget(form.subarea) }}
    </div>

    <div class="form-group" id="planche">
        {{ form_widget(form.planche) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.legume) }}
    </div>

    <div class="form-group">
        {{ form_widget(form.variete) }}
    </div>

    <div class="form-group" id='tache'>
        {{ form_widget(form.tache) }}
    </div>

    <div class="form-group">
        <select name="preparation" id="preparation" class="form-control">
            <option value="Traction">Traction</option>
            <option value="Manuel">Manuel</option>
        </select>
    </div>

    <div class="from-group">
        <select name="recolte" id="recolte" class="form-control">
            <option value="KG">Kg</option>
            <option value="Botte">Botte</option>
            <option value="Unité">Unité</option>
        </select>
    </div>
        
        
    <div class="from-group">
        <select name="couvert" id="couvert" class="form-control">
            <option value="Muchage">Muchage</option>
            <option value="Desherbage">Desherbage</option>
            <option value="Bachage">Bachage</option>
        </select>
    </div>    

    <div class="form-group">
        <select name="bachage" id="bachage" class="form-control">
            <option value="Plastique">Plastique</option>
            <option value="Chanvre">Chanvre</option>
        </select>
    </div>

    <div class="form-group" id='amount'>
        <label>Choisir une quantité</label>
        {{ form_widget(form.amount) }}
    </div>

    <div class="form-group" id='comment'>
        <label>Commentaire (facultatif)</label>
        {{ form_widget(form.comment) }}
    </div>

    <input type="text" name="chronotime" id="chronotime" value="0:00:00:00"/>
    <input type="button" name="startstop" id="startstop" value="start!" onClick="chronoStart()" />
    <input type="button" name="reset" id="reset" value="reset!" onClick="chronoReset()" />

    <button class="btn save" >{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

</div>

{% endblock %}